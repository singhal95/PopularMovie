<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_movie_detail" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.praveer0809.popularmovie.MovieDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zerolength"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:layout_width="@dimen/zerolength"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/poster"
                />
            <LinearLayout
                android:layout_width="@dimen/zerolength"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:weightSum="3"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zerolength"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/relase_date"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zerolength"
                    android:layout_weight="1"
                    android:textSize="@dimen/movietitlesize"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/movietitle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zerolength"
                    android:id="@+id/rating"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zerolength"
            android:textSize="@dimen/overviewtextsize"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/layoutmargintop"
            android:layout_weight="1"
            android:id="@+id/overview"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
